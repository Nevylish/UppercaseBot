    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "Node",
        "target": "ES2020",
        "resolveJsonModule": true,
        "allowJs": true,
        "skipLibCheck": true,
        "types": ["node"],
        "outDir": "dist/",
        "rootDir": "src/"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
